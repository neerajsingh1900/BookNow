@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card p-4 shadow-lg rounded-3">
            <h2 class="text-center mb-4">Create a new account</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Name -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Name" class="form-control" aria-required="true" />
                    <label asp-for="Input.Name">Full Name</label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="form-floating mb-3">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                        <option disabled selected>-Select Role-</option>
                    </select>
                    <label asp-for="Input.Role">Role</label>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <!-- City -->
                @* <div class="form-floating mb-3">
                    <input asp-for="Input.CityId" type="number" class="form-control" />
                    <label asp-for="Input.CityId">City Id</label>
                    <span asp-validation-for="Input.CityId" class="text-danger"></span>
                </div> *@

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

