@* BookNow.Web/Areas/Producer/Views/Shared/_ProducerLayout.cshtml *@
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Producer Dashboard - Movie Management</title>

    <!-- Link to global Bootstrap and your custom theme -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/custom-theme.css" />
    <!-- Link to specific Producer dashboard styles -->
    <link rel="stylesheet" href="~/css/producer/dashboard.css" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" xintegrity="sha512-z3gLpd7yknf1yWutW51z8sF5g+o14792h9F1G12gR0wFw8F9gPzY2K8Q7e4fK4j5c6gR4v2O0i05g0T8D4w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* CSS specific to this layout that uses your theme variables */
        .dashboard-wrapper {
            display: flex;
            min-height: 100vh;
            background-color: var(--bg-light); /* from site.css theme */
        }

        .sidebar {
            width: 250px;
            background-color: #fff;
            box-shadow: 2px 0 5px rgba(0,0,0,0.05);
            padding: 15px;
            position: fixed;
            height: 100%;
            overflow-y: auto;
        }

            .sidebar a {
                padding: 10px 15px;
                display: block;
                color: var(--text-color);
                text-decoration: none;
                border-radius: 0.5rem;
                transition: background-color 0.2s;
            }

                .sidebar a:hover {
                    background-color: rgba(var(--brand-primary), 0.1);
                    color: var(--brand-primary) !important;
                    text-decoration: none;
                }

            .sidebar .active {
                background-color: var(--brand-primary);
                color: white !important;
                font-weight: 600;
            }

        .main-content {
            flex-grow: 1;
            margin-left: 250px; /* Offset for the fixed sidebar */
            padding: 20px;
        }
    </style>
</head>
<body class="light-theme">
    <div class="dashboard-wrapper">

        @* === Sidebar (Producer Navigation) === *@
        <div class="sidebar">
            <h4 class="mb-4 text-center" style="color: var(--brand-primary);">Producer Portal</h4>

            <p class="text-muted small text-uppercase mt-4 mb-2">Management</p>
            <a asp-area="Producer" asp-controller="Movie" asp-action="Index" class="active">
                <i class="fas fa-video me-2"></i> Manage Movies
            </a>
            <a asp-area="Producer" asp-controller="Show" asp-action="Index">
                <i class="fas fa-calendar-alt me-2"></i> Schedule Shows
            </a>

            <p class="text-muted small text-uppercase mt-4 mb-2">Account</p>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                <button type="submit" class="btn btn-outline-danger w-100 mt-2">
                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                </button>
            </form>
        </div>

        @* === Main Content Area === *@
        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    @* Standard Scripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Producer-specific JS *@
    <script src="~/js/producer/movie.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
