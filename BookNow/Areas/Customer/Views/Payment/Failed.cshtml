@{
    ViewData["Title"] = "Payment Failed";
    Layout = "_PaymentLayout";
}

<div class="container text-center py-5">
    <h1 class="text-danger display-2 mb-4"><i class="fas fa-times-circle"></i> Payment Failed</h1>
    <h2 class="mb-4">We could not process your transaction.</h2>
    <p class="lead">Your payment was explicitly declined or encountered an error.</p>
    <p>Your seats have been released. Please check your payment details and try selecting seats again.</p>
    <div class="my-4">
        <a href="/" class="btn btn-primary btn-lg mt-3">Start a New Booking</a>
    </div>
</div>