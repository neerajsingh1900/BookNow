@{
    ViewData["Title"] = "Session Expired";
    Layout = "_PaymentLayout";
}

<div class="container text-center py-5">
    <h1 class="text-warning display-2 mb-4"><i class="fas fa-hourglass-end"></i> Session Expired</h1>
    <h2 class="mb-4">Your 5-minute hold time ran out.</h2>
    <p class="lead">Your seats have been released and are now available for others to book.</p>
    <p>To continue, you must return to the seat selection page and attempt the booking again quickly.</p>
    <div class="my-4">
        <a href="/" class="btn btn-primary btn-lg mt-3">Start a New Booking</a>
    </div>
</div>