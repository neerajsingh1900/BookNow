@model BookNow.Application.DTOs.PaymentDTOs.PaymentSummaryDTO
@{
    ViewData["Title"] = "Secure Payment | BookNow";
    Layout = "_PaymentLayout"; 
}

<div class="row justify-content-center w-100">
    <div class="col-12 col-xxl-10">
        <div class="row g-4">

                    <input type="hidden" id="hold-expiry-timestamp" value="@Model.HoldExpiryUnixTimeSeconds" />
            <input type="hidden" id="server-timestamp" value="@Model.ServerUnixTimeSeconds" />

                    <div class="col-lg-7">
                <div class="card shadow-lg border-0 h-100">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0 fw-bold d-flex align-items-center">
                            <i class="fas fa-lock me-2"></i> Secure Payment Gateway
                        </h5>
                    </div>

                    <div class="card-body p-4">
                        <div class="alert alert-warning text-center fw-bold mb-4 d-flex justify-content-between align-items-center">
                            <span class="d-flex align-items-center">
                                <i class="fas fa-hourglass-half me-2"></i> Your seats are **held** for:
                            </span>
                            <span class="display-6 font-weight-bold text-danger" id="payment-timer"></span>
                        </div>

                        <div class="text-center p-3 border-bottom mb-4">
                            <p class="text-muted mb-1">Total Payable Amount:</p>
                            <h2 class="font-weight-bolder text-success">
                                @Model.CurrencySymbol @Model.TotalAmount.ToString("N2")
                            </h2>
                        </div>

                        <h5 class="card-title mb-3">Choose Payment Method</h5>
                        <div class="accordion" id="paymentMethodsAccordion">

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingCard">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCard" aria-expanded="false" aria-controls="collapseCard">
                                        <i class="fas fa-credit-card me-2 text-primary"></i> Credit/Debit Card
                                    </button>
                                </h2>
                                <div id="collapseCard" class="accordion-collapse collapse" aria-labelledby="headingCard" data-bs-parent="#paymentMethodsAccordion">
                                    <div class="accordion-body">
                                        <form>
                                            <div class="mb-3">
                                                <input type="text" class="form-control" placeholder="Card Number (Dummy: 4111 xxxx xxxx 1111)">
                                            </div>
                                            <div class="row">
                                                <div class="col-6 mb-3">
                                                    <input type="text" class="form-control" placeholder="MM/YY (Dummy: 12/26)">
                                                </div>
                                                <div class="col-6 mb-3">
                                                    <input type="password" class="form-control" placeholder="CVV (Dummy: 123)">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <input type="text" class="form-control" placeholder="Name on Card (Dummy)">
                                            </div>
                                            <p class="text-muted small"><i class="fas fa-info-circle me-1"></i> Card details are not processed in this simulation.</p>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingUPI">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseUPI" aria-expanded="false" aria-controls="collapseUPI">
                                        <i class="fas fa-qrcode me-2 text-info"></i> UPI / QR Code
                                    </button>
                                </h2>
                                <div id="collapseUPI" class="accordion-collapse collapse" aria-labelledby="headingUPI" data-bs-parent="#paymentMethodsAccordion">
                                    <div class="accordion-body text-center">
                                        <p class="fw-bold">Scan to Pay (Simulation Only)</p>

                                        <p class="small text-muted mt-2">Use any UPI app to scan this dummy QR code.</p>
                                    </div>
                                </div>
                            </div>

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingNetBanking">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNetBanking" aria-expanded="false" aria-controls="collapseNetBanking">
                                        <i class="fas fa-university me-2 text-warning"></i> Net Banking
                                    </button>
                                </h2>
                                <div id="collapseNetBanking" class="accordion-collapse collapse" aria-labelledby="headingNetBanking" data-bs-parent="#paymentMethodsAccordion">
                                    <div class="accordion-body">
                                        <p class="fw-bold mb-2">Select Your Bank (Simulation)</p>
                                        <select class="form-select">
                                            <option>State Bank of India</option>
                                            <option>ICICI Bank</option>
                                            <option>HDFC Bank</option>
                                            <option>Axis Bank</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="mt-5 pt-3 border-top">
                            <h5 class="mb-3">Simulate Transaction</h5>
                            <div class="d-flex justify-content-between">
                                <button id="btn-simulate-failure"
                                        class="btn btn-outline-danger btn-lg flex-fill me-2"
                                        data-booking-id="@Model.BookingId">
                                    <i class="fas fa-times-circle me-1"></i> Payment Failure
                                </button>
                                <button id="btn-simulate-success"
                                        class="btn btn-success btn-lg flex-fill"
                                        data-booking-id="@Model.BookingId">
                                    <i class="fas fa-check-circle me-1"></i> Complete Payment
                                </button>
                            </div>
                            <p class="text-center small text-muted mt-2">Note: This action bypasses the actual payment process.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="card shadow-lg border-0 sticky-top" style="top: 20px;">
                    <div class="card-header bg-light py-3">
                        <h5 class="mb-0 fw-bold"><i class="fas fa-clipboard-list me-2"></i> Booking Summary</h5>
                    </div>
                    <div class="card-body p-4">

                        <h6 class="fw-bold mb-3 text-primary">@Model.MovieTitle</h6>
                        <dl class="row small mb-4">
                            <dt class="col-sm-4 text-muted">Ticket No.</dt>
                            <dd class="col-sm-8 text-end fw-bold">#@Model.TicketNumber</dd>

                            <dt class="col-sm-4 text-muted">Date & Time</dt>
                            <dd class="col-sm-8 text-end">@Model.ShowDateTime.ToString("ddd, MMM dd, yyyy") at @Model.ShowDateTime.ToString("hh:mm tt")</dd>

                            <dt class="col-sm-4 text-muted">Venue</dt>
                            <dd class="col-sm-8 text-end">@Model.TheatreName - Screen @Model.ScreenName</dd>

                            <dt class="col-sm-4 text-muted">Seats</dt>
                            <dd class="col-sm-8 text-end fw-bold text-danger">@string.Join(", ", Model.SeatLabels)</dd>
                        </dl>

                        <h6 class="fw-bold border-top pt-3 mb-3">Price Details</h6>
                        <dl class="row small">
                            <dt class="col-sm-8">Ticket Price (@Model.SeatLabels.Count Seats)</dt>
                            @{
                                decimal ticketPrice = Model.TotalAmount - 18m;
                            }
                            <dd class="col-sm-4 text-end">@Model.CurrencySymbol @ticketPrice.ToString("N2")</dd>

                            <dt class="col-sm-8">Convenience Fee + Tax</dt>
                            <dd class="col-sm-4 text-end">@Model.CurrencySymbol 18.00</dd>

                            <dt class="col-sm-8 fw-bold border-top pt-2">Total Amount</dt>
                            <dd class="col-sm-4 text-end fw-bold border-top pt-2 text-success">@Model.CurrencySymbol @Model.TotalAmount.ToString("N2")</dd>
                        </dl>

                        <div class="border-top mt-3 pt-3 small">
                            <p class="mb-1 text-muted">Booking Confirmation will be sent to:</p>
                            <p class="fw-bold mb-0"><i class="fas fa-envelope me-1"></i> @Model.UserEmail</p>
                        </div>

                    </div>
                    <div class="card-footer bg-light text-center small">
                        <i class="fas fa-shield-alt text-success me-1"></i> 100% Safe and Secure Payments.
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/payment/gateway-simulation.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
}