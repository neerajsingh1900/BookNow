@model IEnumerable<BookNow.Application.DTOs.CustomerDTOs.SearchDTOs.MovieListingDTO>
@{
    ViewData["Title"] = "BookNow - Movies";
}

<style>
   
    .section-header {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-color);
        margin-bottom: 1.5rem;
        border-left: 5px solid var(--brand-primary); /* Red accent line */
        padding-left: 1rem;
    }

    /* Carousel / Sliding Banner styles */
    .promo-carousel {
        margin-bottom: 3rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .carousel-item img {
        height: 350px; /* Consistent height for banners */
        object-fit: cover;
        width: 100%;
    }

    /* Movie Card Overrides to fit the new layout and maintain consistency */
    .movie-card {
        background-color: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1); /* Lighter shadow for movie card */
        border-radius: 10px; /* matches your custom CSS */
    }

    .movie-poster-img {
        height: 350px; /* Matches your custom CSS */
        object-fit: cover;
        width: 100%;
        border-radius: 10px 10px 0 0;
    }

    .movie-rating {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: rgba(0, 0, 0, 0.75);
        color: white;
        padding: 4px 8px;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        display: flex;
        align-items: center;
    }

    /* Ensure the button text is white for the movie card button */
    .btn-movie-book {
        background-color: var(--brand-primary) !important;
        border-color: var(--brand-primary) !important;
        color: #fff !important; /* Explicitly ensure white text */
        width: 100%;
        padding: 0.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        margin-top: 10px;
        transition: background-color 0.25s ease;
    }

        .btn-movie-book:hover {
            background-color: var(--brand-primary-dark) !important;
            border-color: var(--brand-primary-dark) !important;
            color: #fff !important;
        }
</style>

<div id="promoCarousel" class="carousel slide promo-carousel" data-bs-ride="carousel">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="~/images/coppy.jpg" class="d-block w-100" alt="BookNow Big Offer Promotion">
        </div>

        <div class="carousel-item">
            <img src="~/images/cpyy.jpg" class="d-block w-100" alt="Exclusive Movie Passes - Dark Cinema">
        </div>

        <div class="carousel-item">
            <img src="~/images/teamcopy.jpg" class="d-block w-100" alt="New Events and Live Concerts">
        </div>

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#promoCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#promoCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
    
<div class="container container-lg py-4">

    <h2 class="section-header">Now Showing Near You</h2>

    <div class="row" id="movieList">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning text-center shadow-sm mt-5" role="alert">
                <i class="bi bi-film me-2"></i>
                Movies are currently not available in your selected city.
            </div>
        }
        else
        {
            @foreach (var m in Model)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4">
                    <a asp-area="Customer" asp-controller="ShowSearch" asp-action="SelectTheatre" asp-route-movieId="@m.MovieId"
                       class="text-decoration-none text-dark">
                        <div class="movie-card">
                            <div class="position-relative">
                                <img src="@m.PosterUrl" class="movie-poster-img" alt="@m.Title">
                                <div class="movie-rating">
                                    <i class="bi bi-star-fill text-warning me-1"></i>
                                    N/A
                                    <span class="ms-1 text-white-50">| @m.ReleaseDate.ToString("yyyy")</span>
                                </div>
                            </div>
                            <div class="movie-card-body text-center">
                                <h5 class="movie-card-title">@m.Title</h5>
                                <p class="movie-card-subtext mb-2">@m.Language | @m.Genre</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>

    <div class="row" id="movieError" style="display:none;">
        <div class="col-12 alert alert-danger text-center" role="alert">
        </div>
    </div>

    <h2 class="section-header mt-5">Trending Events</h2>
    <div class="row">
        <div class="col-md-3 mb-4"><div class="movie-card movie-card-body text-center shadow-sm">Live Concerts</div></div>
        <div class="col-md-3 mb-4"><div class="movie-card movie-card-body text-center shadow-sm">Sports Fixtures</div></div>
        <div class="col-md-3 mb-4"><div class="movie-card movie-card-body text-center shadow-sm">Theatre Shows</div></div>
        <div class="col-md-3 mb-4"><div class="movie-card movie-card-body text-center shadow-sm">Kids Activities</div></div>
    </div>
</div>