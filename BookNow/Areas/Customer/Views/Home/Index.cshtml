@{
    ViewData["Title"] = "Home Page";
}

<style>
    :root {
        --brand-primary: #E53935; /* BookMyShow / Material Red */
        --brand-primary-dark: #B71C1C;
        --text-color: #212121;
        --text-muted: #555555;
        --bg-light: #f9f9f9;
        --card-bg: #ffffff;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
        color: var(--text-color);
        margin: 0;
        padding: 0;
    }

    /* Hero Section */
    .hero-section {
        background: url('/images/Venom-3-Movie-Wallpaper-4K-Ultra-HD-Poster-Free-Download-64.jpg.webp') no-repeat center center;
        background-size: cover;
        height: 70vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
    }


    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255,255,255,0.3); /* reduce opacity so buttons show */
        z-index: 0; /* behind content */
    }


    .hero-content {
        z-index: 1; /* above overlay */
        color: #212121; /* dark text on light overlay */
    }


      


    /* Buttons – clean, no shadow */
    .btn-primary {
        background-color: #E53935 !important;
        color: #fff !important;
        border: none;
        border-radius: 0.5rem;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        width: auto; /* ensure button width is proper */
        transition: background-color 0.2s ease;
        box-shadow: none !important; /* no box effect */
        position: relative; /* ensure above overlay */
    }


        .btn-primary:hover {
            background-color: #B71C1C !important;
        }

        .btn-primary:active {
            background-color: var(--brand-primary-dark) !important;
            transform: none; /* no press effect */
            box-shadow: none !important;
        }

        .btn-primary:focus {
            outline: none !important;
            box-shadow: none !important;
        }

    /* Section Heading */
    .section-title {
        color: var(--text-color);
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
    }

    /* Movie Cards */
    .card {
        background-color: var(--card-bg);
        border: 1px solid #e0e0e0;
        border-radius: 0.5rem;
        overflow: hidden;
        transition: none; /* no hover effect */
        text-align: center;
    }

        .card img {
            width: 100%;
            border-bottom: 1px solid #e0e0e0;
        }

    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0.5rem 0;
    }

    .card-text {
        color: var(--text-muted);
        margin-bottom: 1rem;
    }
</style>

<!-- Hero -->
<div class="hero-section">
    <div class="overlay"></div>
    <div class="hero-content">
