@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<BookNow.Web.ViewModels.CustomerMovieViewModel>


<style>
 

    :root {
        --brand-primary: #E53935; /* BookMyShow / Material Red */
        --brand-primary-dark: #B71C1C;
        --text-color: #212121;
        --text-muted: #555555;
        --bg-light: #f9f9f9;
        --card-bg: #ffffff;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
        color: var(--text-color);
        margin: 0;
        padding: 0;
    }

    /* Hero Section */
    .hero-section {
        background: url('/images/Venom-3-Movie-Wallpaper-4K-Ultra-HD-Poster-Free-Download-64.jpg.webp') no-repeat center center;
        background-size: cover;
        height: 70vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
    }


    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255,255,255,0.3); /* reduce opacity so buttons show */
        z-index: 0; /* behind content */
    }


    .hero-content {
        z-index: 1; /* above overlay */
        color: #212121; /* dark text on light overlay */
    }


      


   

    /* Section Heading */
    .section-title {
        color: var(--text-color);
        font-weight: 700;
        text-align: center;
        margin-bottom: 2rem;
    }

    /* Movie Cards */
    .row .col-md-4 {
        display: flex;
        justify-content: center; /* center cards in column */
    }

    .card {
        width: 90%; /* smaller than full column */
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .card img {
            width: 100%;
            height: 300px; /* reduced from 400px */
            object-fit: cover;
            border-bottom: 1px solid #e0e0e0;
            border-radius: 0.5rem 0.5rem 0 0;
        }



    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin: 0.5rem 0;
    }

    .card-text {
        color: var(--text-muted);
        margin-bottom: 1rem;
    }
</style>

<!-- Hero -->
<div class="hero-section">
    <div class="overlay"></div>
    <div class="hero-content">
        <h1>Welcome to BookNow</h1>
        <p>Your ultimate destination for movies & events.</p>
        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-4 w-auto">
            Browse Movies
        </a>

    </div>
</div>

<!-- Movies Section -->

<div class="container my-5">
    <h2 class="section-title">Now Showing</h2>
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@(movie.PosterUrl != null ? movie.PosterUrl : "https://via.placeholder.com/400x600.png?text=No+Poster")"
                         alt="@movie.Title" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.Genre • @movie.Duration min</p>
@* <a asp-area="Customer" asp-controller="Booking" asp-action="BookNow" asp-route-id="@movie.MovieId" class="btn btn-primary w-100">
    Book Now
</a> *@
</div>
                </div>
            </div>
        }
    </div>
</div>
