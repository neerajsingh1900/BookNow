@model BookNow.Application.DTOs.ShowDTOs.ShowCreationDTO
@{
    ViewData["Title"] = "Schedule New Show";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm p-4 border-0 rounded-3">
                <h2 class="fw-bold mb-3 text-center">
                    Schedule Show on Screen #@Model.ScreenId
                    <i class="fas fa-info-circle text-primary ms-2" data-bs-toggle="tooltip"
                       title="Select the movie and schedule its start time. End time will be calculated automatically."></i>
                </h2>
                <p class="text-muted text-center mb-4">
                    Choose a movie and set its start time. End time is calculated automatically.
                </p>

                <form asp-action="Upsert" asp-controller="Show" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="ScreenId" />
                    <input type="hidden" asp-for="DurationMinutes" id="DurationMinutesInput" />

                    <!-- Movie Selection -->
                    <div class="mb-4">
                        <label asp-for="MovieId" class="form-label fw-semibold">
                            Select Movie
                            <i class="fas fa-info-circle text-secondary ms-1" data-bs-toggle="tooltip"
                               title="Select a movie to schedule. Duration, genre, language, and poster are shown in the dropdown."></i>
                        </label>
                        <select asp-for="MovieId" id="MovieSelect2" class="form-control form-control-lg">
                            <option value="">-- Loading movies --</option>
                        </select>
                        <span asp-validation-for="MovieId" class="text-danger small"></span>
                    </div>

                    <!-- Start & End Time -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="StartTime" class="form-label fw-semibold">Start Date & Time</label>
                            <input asp-for="StartTime" type="datetime-local" class="form-control form-control-lg" id="StartTimeInput" />
                            <span asp-validation-for="StartTime" class="text-danger small"></span>
                            <div id="clientFutureTimeError" class="text-danger small mt-1" style="display:none;"></div>
                        </div>

                        <div class="col-md-6">
                            <label class="fw-semibold">End Time</label>
                            <p id="EndTimeDisplay" class="text-muted fs-6">--:--</p>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary" id="submitButton" disabled>
                            <i class="fas fa-calendar-plus me-1"></i> Schedule Show & Create Tickets
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
  
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>

    <script src="~/js/show/show-upsert.js" asp-append-version="true"> </script>
}
