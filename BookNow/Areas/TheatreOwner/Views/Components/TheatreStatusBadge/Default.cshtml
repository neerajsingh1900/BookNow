@model string

@{
    string badgeClass = Model switch
    {
        "PendingApproval" => "bg-warning text-dark",
        "Active" => "bg-success",
        "Maintenance" => "bg-danger",
        _ => "bg-secondary",
    };
}

<span class="badge @badgeClass rounded-pill px-3 py-2">
    @Model
</span>
