<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookNow</title>
    <!-- Use a simple, modern CSS framework like Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Custom styles for the minimal seat map page */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa; /* Light gray background */
        }

        main {
            flex-grow: 1;
        }

        .booking-page-container {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .fixed-bottom-bar {
            position: sticky;
            bottom: 0;
            z-index: 1020;
            border-radius: 8px 8px 0 0;
        }
        /* Custom Seat Styles */
        .seat-map-wrapper {
            overflow-x: auto;
            overflow-y: hidden;
            padding-bottom: 50px; /* Space for horizontal scrollbar */
        }

        .seat-row {
            white-space: nowrap; /* Prevent row items from wrapping */
        }

        .seat-item {
            display: inline-flex;
            width: 30px;
            height: 30px;
            margin: 2px;
            border-radius: 6px;
            font-size: 10px;
            font-weight: bold;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: 1px solid #ccc;
            transition: all 0.1s ease;
            user-select: none;
        }

        .seat-available {
            background-color: #e9ecef; /* Light gray */
            border-color: #ccc;
            color: #333;
        }

            .seat-available:hover {
                background-color: #dee2e6;
            }

        .seat-selected {
            background-color: #007bff; /* Blue */
            border-color: #007bff;
            color: white;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .seat-sold {
            background-color: #6c757d; /* Dark gray/Sold */
            border-color: #6c757d;
            color: #ccc;
            cursor: not-allowed;
        }

        .seat-held {
            background-color: #ffc107; /* Yellow/Warning - Temporarily held */
            border-color: #ffc107;
            color: #333;
            cursor: not-allowed;
            opacity: 0.6;
        }

        .row-label {
            min-width: 30px;
            text-align: center;
        }

        .screen-indicator {
            background: linear-gradient(to top, #333, #666);
            color: white !important;
        }

    </style>
</head>
<body>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
