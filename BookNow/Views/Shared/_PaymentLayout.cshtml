<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookNow Checkout</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>
    <div class="container-fluid bg-light min-vh-100 d-flex flex-column">

        <header class="py-3 border-bottom text-center">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand text-primary fw-bold fs-4">
                <i class="fas fa-ticket-alt"></i> BookNow
            </a>
            <span class="d-block text-muted small">Secure Checkout</span>
        </header>

        <main role="main" class="pb-3 flex-grow-1 d-flex align-items-center justify-content-center">
            @RenderBody()
        </main>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>